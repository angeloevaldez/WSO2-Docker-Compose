<?xml version="1.0" encoding="UTF-8"?>
<sequence name="hciRequest" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
  <log level="full" separator=","/>
  <iterate attachPath="//hfs:getHCCentersResponse"
    description="Iterate HC Codes"
    expression="//hfs:getHCCentersResponse/hfs:return" preservePayload="true">
    <target>
      <sequence>
        <payloadFactory media-type="xml">
          <format>
            <heal:getHCCenterInfo xmlns:heal="http://healthcare.wso2">
              <heal:hcCenterCode>$1</heal:hcCenterCode>
            </heal:getHCCenterInfo>
          </format>
          <args>
            <arg evaluator="xml" expression="//hcc:getHCCentersResponse/hcc:return/text()"/>
          </args>
        </payloadFactory>
        <log level="full" separator=","/>
        <send>
          <endpoint key="HCInformationService"/>
        </send>
      </sequence>
    </target>
  </iterate>
</sequence>
